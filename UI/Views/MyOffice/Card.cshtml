<h1>Cart Page</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8" id="cartItems"></div>
        <div class="col-md-4">
            <div id="totalPrice" class="text-end mt-3">Total Price: 0.00 USD</div>
            <button id="payButton" class="btn btn-primary mt-3">Pay</button>
        </div>
    </div>
</div>
<script src="~/js/displayCartItems.js"></script>
<script src="~/js/cartLogic.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>

    $("#payButton").click(function (e) {

        var gameIds = []; // Массив для хранения числовых ID игр

        // Собираем числовые ID игр из атрибутов data-game-id
        $(".card-body").each(function () {
            gameIds.push(parseInt($(this).attr('data-game-id')));
        });

        console.log(gameIds);
        // Perform the AJAX request
        $.ajax({
            url: "/MyOffice/BuyGames", // Your controller URL
            method: "POST",
            data: {
                orderDTO: {
                    gameIds: gameIds
                },
                name: "@User.Identity.Name" // Assuming Razor syntax
            },
            success: function (response) {
                // Handle the success response if needed
                console.log("AJAX request successful");
            },
            error: function (xhr, status, error) {
                // Handle the error if needed
                console.error("AJAX request error:", error);
            }
        });
    });
</script>