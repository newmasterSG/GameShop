@{
}
@model IEnumerable<Domain.Entities.MessageEntity>

<h1>Admin Chat</h1>

<ul>
    @foreach (var message in Model)
    {
        <li>@message.UserId: @message.Message</li>
        @if (!message.IsAnswered)
        {
            <li>
                <input type="text" class="admin-reply" data-user-id="@message.UserId" />
                <button class="reply-button">Reply</button>
            </li>
        }
    }
</ul>