@{
}
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model UI.Models.Search.SearchViewModel

@if (Model.PagedSearchResults != null && Model.PagedSearchResults.Count > 0)
{
    <h3 class="text-center">Search Results: @ViewBag.GameName</h3>
    <div class="container align-content-center justify-content-center">
        @foreach (var game in Model.PagedSearchResults)
        {      <a href="@Url.Action("GameDetails","Game")/@game.Id">
                    <h4>@game.Name</h4>
                    <img src="@game.Image" alt="Game Image" style="width: 100px" />
                    <p>Price: @game.Price</p>
                    <p>Owned: @game.Owned</p>
                </a>
        }
    </div>

    <div>
        <pager pager-list="@Model.PagedSearchResults" asp-action="Search" asp-route-gameName="@Model.GameName"></pager>
    </div>
}
else{

}