@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Топ игры</h2>
    <div id="topGamesCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var gam in Model.CarouselGames)
            {
                <div class="carousel-item active">
                    <img src="@gam.Image" class="w-100" alt="@gam.Name">
                    <div class="carousel-caption">
                        <h5 class="card-title">@gam.Name</h5>
                        <p class="card-text">@gam.Price</p>
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#topGamesCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#topGamesCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="text-end mt-3">
        <a href="#" class="btn btn-primary">Показать все</a>
    </div>

    <!-- List Games -->
    <div class="row">
        @foreach (var game in Model.AllGames)
        {
            <div class="col-md-3 mb-3">
                <div class="card">
                    <img src="@game.Image" class="card-img">
                    <div class="card-body">
                        <h5 class="card-title">@game.Name</h5>
                        <p class="card-text">@game.Price</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
