@model UI.Models.User.ForgotPasswordViewModel
@{
    ViewData["Title"] = ViewBag.Title;
}

<h1>@ViewBag.Title</h1>

<form method="post">
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <button type="submit">@ViewBag.ResetButton</button>
</form>
