@model UI.Models.User.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Забыли пароль?";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <button type="submit">Восстановить пароль</button>
</form>
